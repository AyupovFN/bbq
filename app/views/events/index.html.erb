<h1>События</h1>

<div class="buffer-both">
  <%= link_to t('button.create_event'), new_event_path, class: 'btn btn-success' %>
</div>

<div class="row buffer-bottom">
  <%# Рендерим сразу массив событий, каждый в паршиале 'events/event' %>
  <%= render partial: 'events/event', collection: @events %>
</div>

<div class="pagination pagination-lg justify-content-center">
  <%= link_to "Last Page", events_path(page: @page - 1)  %>
  |
  <%= link_to "Next Page", events_path(page: @page + 1)  %>
</div>

